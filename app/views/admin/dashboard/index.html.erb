<div class="row">
  <div class="col-xs-12 col-md-6 col-lg-4">
    <div class="panel panel-orange panel-widget ">
      <div class="row no-padding">
        <div class="col-sm-3 col-lg-5 widget-left">
          <span class="glyphicon glyphicon-shopping-cart" aria-hidden="true"></span>
        </div>
        <div class="col-sm-9 col-lg-7 widget-right">
          <div class="large"><%= @products.count %></div>
          <div class="text-muted">Produtos Cadastrados</div>
        </div>
      </div>
    </div>
  </div>
  <div class="col-xs-12 col-md-6 col-lg-4">
    <div class="panel panel-teal panel-widget">
      <div class="row no-padding">
        <div class="col-sm-3 col-lg-5 widget-left">
          <span class="glyphicon glyphicon-envelope" aria-hidden="true"></span>
        </div>
        <div class="col-sm-9 col-lg-7 widget-right">
          <div class="large"><%= @messages.count %></div>
          <div class="text-muted">Contatos Recebidos</div>
        </div>
      </div>
    </div>
  </div>
  <div class="col-xs-12 col-md-6 col-lg-4">
    <div class="panel panel-red panel-widget">
      <div class="row no-padding">
        <div class="col-sm-3 col-lg-5 widget-left">
          <span class="glyphicon glyphicon-user" aria-hidden="true"></span>
        </div>
        <div class="col-sm-9 col-lg-7 widget-right">
          <div class="large"><%= @visitors.count %></div>
          <div class="text-muted">Visitantes Cadastrados</div>
        </div>
      </div>
    </div>
  </div>
</div><!--/.row-->


<div class="row">
  <div class="col-md-6">
    <div class="panel panel-primary">
      <div class="panel-heading">
        <span class="glyphicon glyphicon-shopping-cart panel-heading-icon" aria-hidden="true"></span>
        Ultimos Produtos
      </div>
      <div class="panel-body">
      <table class="table table-hover table-bordered">
      <!-- <table data-toggle="table" > -->
        <tbody>
          <% @products.last(5).each do |product| %>
            <tr>
              <td class="col-lg-8">
                <strong><%= product.name %></strong>
                <br />
                Adicionado Ã  <%= time_ago_in_words(product.created_at) %> 
              </td>
              <td class="col-lg-4">
                <div class="columns btn-group pull-right">
                  <%= link_to edit_admin_product_path(product) do %>
                    <button class="btn btn-default" type="button" name="toggle" title="Toggle">
                      Editar
                    </button>
                  <% end %>
                  <%= link_to admin_product_path(product) do %>
                    <button class="btn btn-default " type="button" name="toggle" title="Toggle">
                      Ver
                    </button>
                  <% end %>
                </div>
              </td>
            </tr>
          <% end %>
        </tbody>
      </table>
      </div>
      <div class="panel-footer">
        <%= link_to new_admin_product_path do %>
          <button type="button" class="btn btn-primary">Novo</button>
        <% end %>
        <%= link_to admin_products_path do %>
          <button type="button" class="btn btn-link">Ver Todos</button>
        <% end %>
      </div>
    </div>
  </div>

  <div class="col-md-6">
    <div class="panel panel-primary chat">
      <div class="panel-heading">
        <span class="glyphicon glyphicon-envelope panel-heading-icon" aria-hidden="true"></span>Ultimas Mensagens
      </div>
    
      <div class="panel-body">
        <ul>
          <% @messages.last(5).each do |message| %>
          <li class="left clearfix" style="margin-left:-25px;">
            <div class="chat-body clearfix">
              <div class="header">
                <strong class="primary-font"><%= message.visitor.name %></strong> <small class="text-muted"><%= time_ago_in_words(message.created_at) %></small>
              </div>
              <p>
                <%= message.content %>
              </p>
            </div>
          </li>
          <% end %>
        </ul>
      </div>
      <div class="panel-footer" style="height: 53px;">
        <%= link_to admin_products_path do %>
          <button type="button" class="btn btn-link btn-md pull-right">Ver Todos</button>
        <% end %>
      </div>                <!-- Form actions -->
    </div>
  </div>
</div>