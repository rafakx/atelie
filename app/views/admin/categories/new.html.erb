<h1>Admin::Categories#new</h1>

<%= form_for [:admin, @category] do |f| %>
  <p><%= f.text_area :name, placeholder: 'Decorativo, Mesa' %> </p>
  <p><%= f.submit %></p>
<% end %>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Created</th>
      <th>Em uso</th>
      <th>Ações</th>
    </tr>
  </thead>
  <tbody>
  <% @categories.each do |category| %>
    <tr>
      <td><%= category.name %></td>
      <td><%= time_ago_in_words(category.created_at) %></td>
      <td><%= status_converter(category.in_use?, truthy: "Sim", falsey: "Não") %></td>
      <td>
        <%= link_to edit_admin_category_path(category) do %>
          <button type="button">Editar</button>
        <% end %>
      </td>
      <td>
        <%= create_deletable_button category %>
      </td>
    </tr>
  <% end %>
  </tbody>
</table>
