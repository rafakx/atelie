<%= render 'validation_errors', object: @product %>

<%= form_for [:admin, @product], html: {multipart: true} do |f| %>
  
<div class="row">
  <div class="col-md-6">
    <div class="form-group">
      <label>Nome</label><br />
      <%= f.text_field :name, class: "form-control" %> 
    </div>
    <div class="form-group">
      <label>Categorias</label><br /> 
      <%= f.select :category_ids, Category.all.collect {|c| [c.name, c.id]}, {}, multiple: :true, class: "form-control" %> 
    </div>
    <div class="form-group">
       <label>Publicação</label><br /> 
      <%= f.check_box :publish %> 
    </div>
  </div>
  <div class="col-md-6">
    <div class="form-group">
       <label>Descrição</label><br />
      <%= f.text_area :description, class: "form-control", rows:11 %> 
    </div>
  </div>
  <div class="col-md-12">
    <div class="form-group">
      <label>Imagens</label><br />
      <%= file_field_tag "images[]", type: :file, multiple: true, onchange: 'previewImages(this);' %>
    </div>
    <div id="image_preview" class="row image_preview"></div>
  </div>
</div>
  <div class="form-group">
    <%= f.submit "Salvar", class: "btn btn-primary pull-right" %>
  </div>
<% end %>