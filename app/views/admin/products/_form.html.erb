<%= render 'validation_errors', object: @product %>

<%= form_for [:admin, @product] do |f| %>
  <div class="form-group">
    <label>Nome</label><br />
    <%= f.text_field :name, class: "form-control" %> 
  </div>  
  <div class="form-group">
     <label>Descrição</label><br />
    <%= f.text_area :description, class: "form-control" %> 
  </div>
  <div class="form-group">
     <label>Publicação</label><br /> 
    <%= f.check_box :publish %> 
  </div>
  <div class="form-group">
     <label>Categorias</label><br /> 
    <%= f.select :category_ids, Category.all.collect {|c| [c.name, c.id]}, {}, multiple: :true, class: "form-control" %> 
  </div>
  <div class="form-group">
    <%= f.submit "Salvar", class: "btn btn-primary pull-right" %>
  </div>
<% end %>