  <div class="row">
    <div class="col-xs-10 col-xs-offset-1 col-sm-8 col-sm-offset-2 col-md-4 col-md-offset-4">

      <% if flash[:alert] %>
        <div class="alert bg-primary" role="alert">
          <svg class="glyph stroked empty-message">
          <use xlink:href="#stroked-empty-message"></use></svg> <%= flash[:alert] %> 
        </div>
      <% end %>

      <div class="login-panel panel panel-default">
        <div class="panel-heading">Log in</div>
        <div class="panel-body">
          <%= form_tag admin_sessions_path do %>
            <fieldset>
              <div class="form-group">
                <%= text_field_tag :username, params[:username], class: "form-control", placeholder: "Login" %>
              </div>
              <div class="form-group">
                <%= password_field_tag :password, params[:username], class: "form-control", placeholder: "Senha" %>
              </div>
              <%= submit_tag("Entrar", :class=>"btn btn-primary", :name=>"submit") %>
            </fieldset>
          <% end %>
        </div>
      </div>
    </div>
  </div> 

