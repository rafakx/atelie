  <div class="row">
    <div class="col-xs-10 col-xs-offset-1 col-sm-8 col-sm-offset-2 col-md-6 col-md-offset-3">

      <% if flash[:alert] %>
        <div class="alert bg-primary" role="alert">
          <svg class="glyph stroked empty-message">
          <use xlink:href="#stroked-empty-message"></use></svg> <%= flash[:alert] %> 
        </div>
      <% end %>

      <div class="login-panel panel-blue panel-primary">
        <div class="panel-heading" style="border-bottom: 1px solid #CCC;"><center>Login</center></div>
        <br />
        <div class="panel-body">
          <div class="col-lg-7">
            <%= form_tag admin_sessions_path do %>
              <fieldset>
                <div class="form-group">
                  <label>Login </label>
                  <%= text_field_tag :username, params[:username], class: "form-control", placeholder: "Login" %>
                </div>
                <div class="form-group">
                  <label>Senha </label>

                  <%= password_field_tag :password, params[:username], class: "form-control", placeholder: "Senha" %>
                </div>
                <%= submit_tag("Entrar", :class=>"btn btn-success pull-right", :name=>"submit") %>
              </fieldset>
            <% end %>
          </div>
          <div class="col-lg-3">
          </div>
        </div>
        <br />
      </div>
    </div>
  </div> 

