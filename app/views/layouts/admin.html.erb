<!DOCTYPE html>
<html>
<head>
<meta charset="utf-8">
<meta name="viewport" content="width=device-width, initial-scale=1">
  <title>Admin</title>

  <%= stylesheet_link_tag    'admin', media: 'all', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'admin', 'data-turbolinks-track' => true %>
  <%= csrf_meta_tags %>
</head>


<body>
  <nav class="navbar navbar-inverse navbar-fixed-top" role="navigation">
    <div class="container-fluid">
      <div class="navbar-header">
        <button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#sidebar-collapse">
          <span class="sr-only">Navegação</span>
          <span class="icon-bar"></span>
          <span class="icon-bar"></span>
          <span class="icon-bar"></span>
        </button>
        <a class="navbar-brand" href="#"><span>Gestão de </span>Conteúdo</a>
        <ul class="user-menu">
          <li class="dropdown pull-right">
            <a href="#" class="dropdown-toggle" data-toggle="dropdown">
              <span class="glyphicon glyphicon glyphicon-user" aria-hidden="true"></span>&nbsp;
              <%= @administrator.fullname %> <span class="caret"></span></a>
            <ul class="dropdown-menu" role="menu">
              <li>
                <%= link_to edit_admin_administrator_path(@administrator) do %>
                  <span class="glyphicon glyphicon-user" aria-hidden="true">&nbsp;</span>
                  Perfil
                <% end %>
              </li>
              <li>
                <%= link_to new_admin_setting_path do %>
                  <span class="glyphicon glyphicon-cog" aria-hidden="true">&nbsp;</span>
                  Configurações
                <% end %>
              </li>
              <li>
                <%= link_to site_home_index_path,  target: '_blank' do %>
                  <span class="glyphicon glyphicon-eye-open" aria-hidden="true">&nbsp;</span>
                  Ver Site 
                <% end %>
              </li>
              <li>
                <%= link_to logout_path do %>
                  <span class="glyphicon glyphicon-remove" aria-hidden="true">&nbsp;</span>
                  Sair 
                <% end %>
              </li>
            </ul>
            </ul>
          </li>
        </ul>
      </div>
              
    </div><!-- /.container-fluid -->
  </nav>

    
  <div id="sidebar-collapse" class="col-sm-3 col-lg-2 sidebar">
    <form role="search">
      <div class="form-group">          <span class="glyphicon glyphicon-user" aria-hidden="true"></span>
        <%= 
          @administrator.fullname
        %>
      </div>
    </form>
    <ul class="nav menu">
      <li <%= is_active(controller.controller_name, 'dashboard') %>>
        <%= link_to admin_dashboard_index_path do %>&nbsp;
          <span class="glyphicon glyphicon-th-large" aria-hidden="true"></span>
          <%= t('menu.dashboard') %>
        <% end %> 
      </li>
      <li <%= is_active(controller.controller_name, 'products') %>>
        <%= link_to admin_products_path do %>&nbsp;
          <span class="glyphicon glyphicon-shopping-cart" aria-hidden="true"></span>
          <%= t('menu.products') %>
        <% end %> 
      </li>
      <li <%= is_active(controller.controller_name, 'categories') %>>
        <%= link_to new_admin_category_path do %>&nbsp;
          <span class="glyphicon glyphicon-align-left" aria-hidden="true"></span>
          <%= t('menu.categories') %>
        <% end %> 
      </li>
      <li <%= is_active(controller.controller_name, 'messages') %>>
        <%= link_to admin_messages_path do %>&nbsp;
          <span class="glyphicon glyphicon-envelope" aria-hidden="true"></span>
          <%= t('menu.messages') %>
        <% end %> 
      </li>

      <li <%= is_active(controller.controller_name, 'administrators') %>>
        <%= link_to admin_administrators_path do %>&nbsp;
          <span class="glyphicon glyphicon-user" aria-hidden="true"></span>
          <%= t('menu.administrators') %>
        <% end %> 
      </li>
      <li <%= is_active(controller.controller_name, 'settings') %>>
        <%= link_to new_admin_setting_path do %>&nbsp;
          <span class="glyphicon glyphicon-cog" aria-hidden="true"></span>
          <%= t('menu.settings') %>
        <% end %> 
      </li>
    </ul>
  </div><!--/.sidebar-->


  <div class="col-sm-9 col-sm-offset-3 col-lg-10 col-lg-offset-2 main">

    <%= render 'header' %>

    <% if flash[:notice] %>
      <div class="alert bg-primary" role="alert">
        <span class="glyphicon glyphicon-bell" aria-hidden="true"></span>
        <%= flash[:notice] %> 
      </div>
    <% end %>

    <% if flash[:alert] %>
      <div class="alert bg-primary" role="alert">
        <span class="glyphicon glyphicon-bell" aria-hidden="true"></span>
        <%= flash[:alert] %> 
      </div>
    <% end %>

    <%= yield %>

  </div>

</body>
</html>
